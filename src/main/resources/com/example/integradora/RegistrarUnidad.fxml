<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="336.0" prefWidth="432.0" style="-fx-background-color: #EFEFF0; -fx-background-radius: 25;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.integradora.controllers.RegistrarUnidadController" stylesheets="botones.css">
    <children>
        <Button fx:id="btnCancelar" layoutX="220.0" layoutY="277.0" mnemonicParsing="false" onAction="#cerrarVentana" prefHeight="33.0" prefWidth="90.0" stylesheets="@botones.css" text="Cancelar">
            <font>
                <Font name="Roboto Light" size="12.0" />
            </font>
        </Button>

        <Button fx:id="btnGuardar" layoutX="320.0" layoutY="277.0" mnemonicParsing="false" onAction="#guardarUnidad" prefHeight="33.0" prefWidth="90.0" stylesheets="@botones.css" text="Guardar" textFill="WHITE">
            <font>
                <Font name="Roboto Light" size="12.0" />
            </font>
        </Button>

        <HBox layoutX="-2.0" layoutY="6.0" prefHeight="59.0" prefWidth="439.0">
            <children>
                <Label text="Registrar unidad administrativa" textFill="#404463">
                    <font>
                        <Font name="Roboto Light" size="22.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="70.0" top="20.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>

        <HBox layoutY="82.0" prefHeight="100.0" prefWidth="437.0">
            <children>
                <VBox prefHeight="100.0" prefWidth="332.0">
                    <children>
                        <Label text="Unidad Administrativa" textFill="#404463">
                            <font>
                                <Font name="Roboto Light" size="12.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </Label>

                        <TextField fx:id="labelUnidad" prefHeight="34.0" prefWidth="385.0" style="-fx-background-color: #ffffff; -fx-background-radius: 5;">
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </TextField>
                    </children>
                    <HBox.margin>
                        <Insets left="60.0" top="20.0" />
                    </HBox.margin>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
