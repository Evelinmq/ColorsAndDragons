<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane style="-fx-background-color: ffffff;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.integradora.controllers.EdificioController">

    <top>
        <VBox>
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: #0338D5;">
                    <children>
                        <ImageView fitHeight="29.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Images/Icono.png" />
                            </image>
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </ImageView>
                        <Label text="SISTEMA DE INVENTARIO" textFill="WHITE">
                            <font>
                                <Font name="Tahoma" size="14.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#cerrarSesion" prefHeight="25.0" prefWidth="25.0" style="-fx-background-color: #0338D5;">
                            <graphic>
                                <ImageView fitHeight="18.0" fitWidth="18.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@Images/Icon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200.0" spacing="10.0" style="-fx-background-color: fff;">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <children>
                <Button fx:id="resguardo" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#irResguardo" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #F5F7FA; -fx-background-radius: 10;" text="  Resguardo" textFill="#404463">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Images/Folder.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <VBox.margin>
                        <Insets top="50.0" />
                    </VBox.margin>
                </Button>
                <Region VBox.vgrow="ALWAYS" />
                <Button fx:id="bienes" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#irBienes" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #F5F7FA; -fx-background-radius: 10;" text="  Bienes" textFill="#404463">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Images/Bienes.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Region VBox.vgrow="ALWAYS" />
                <Button fx:id="empleados" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#irEmpleados" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #F5F7FA; -fx-background-radius: 10;" text="  Empleados" textFill="#404463">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Images/Empleado.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Region VBox.vgrow="ALWAYS" />
                <Button fx:id="puesto" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#irPuesto" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #F5F7FA; -fx-background-radius: 10;" text="  Puesto" textFill="#404463">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Images/Puesto.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Region VBox.vgrow="ALWAYS" />
                <Button fx:id="espacio" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#irEspacio" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #F5F7FA; -fx-background-radius: 10;" text="  Espacio" textFill="#404463">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Images/Espacio.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Region VBox.vgrow="ALWAYS" />
                <Button fx:id="unidad" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#irUnidad" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #F5F7FA; -fx-background-radius: 10;" text="  U. Administrativa" textFill="#404463">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Images/Unidad.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Region VBox.vgrow="ALWAYS" />
                <Button fx:id="edificio" alignment="BASELINE_LEFT" mnemonicParsing="false" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #2c55cf; -fx-background-radius: 10;" text="  Edificio" textFill="WHITE">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Images/Edificio2.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Region VBox.vgrow="ALWAYS" />
                <Button fx:id="usuario" alignment="BASELINE_LEFT" mnemonicParsing="false" onAction="#irUsuario" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #F5F7FA; -fx-background-radius: 10;" text="  Usuario" textFill="#404463">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@Images/Usuario.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </left>

    <center>
        <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="10.0" right="10.0" top="10.0" />
                </padding>
                <children>
                    <HBox alignment="CENTER_RIGHT" spacing="10.0">
                        <children>
                            <Button fx:id="agregar" mnemonicParsing="false"  prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #3366FF; -fx-background-radius: 10;" text="+ Agregar" textFill="WHITE">
                                <font>
                                    <Font name="Tahoma" size="14.0" />
                                </font>
                            </Button>
                            <Region HBox.hgrow="ALWAYS" />
                            <ComboBox fx:id="comboEstado" onAction="#filtrarPorEstado" prefHeight="30.0" prefWidth="100.0" promptText="Ver todos" style="-fx-background-radius: 10; -fx-background-color: #ABBAE5;" />
                            <ProgressIndicator fx:id="spinner" progress="0.0" visible="false" />
                            <TextField fx:id="textoBusqueda" prefHeight="30.0" prefWidth="150.0" promptText="Buscar..." />
                            <Button fx:id="botonBusqueda" mnemonicParsing="false" onAction="#buscar" prefHeight="30.0" prefWidth="40.0" style="-fx-background-color: C6CFE2;" text="ðŸ”Ž" />
                        </children>
                    </HBox>
                    <TableView fx:id="tabla" style="-fx-background-color: EFEFF0; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="tablaEdificio" prefWidth="100.0" text="Edificio" />
                            <TableColumn fx:id="tablaEstado" prefWidth="100.0" text="Estado" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefWidth="70.0" spacing="10.0" style="-fx-background-color: fff;">
                <padding>
                    <Insets bottom="10.0" top="20.0" />
                </padding>
                <children>
                    <Button fx:id="eliminar" disable="true" mnemonicParsing="false"  prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: FFA0A0; -fx-background-radius: 10;">
                        <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@Images/basura.png" />
                                </image>
                            </ImageView>
                        </graphic>
                        <VBox.margin>
                            <Insets top="150.0" />
                        </VBox.margin>
                    </Button>
                    <Button fx:id="editar" disable="true" mnemonicParsing="false"  prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: A8D095; -fx-background-radius: 10;">
                        <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@Images/editar.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="regresoEdificio" disable="true" mnemonicParsing="false" prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #2c55cf; -fx-background-radius: 10;">
                        <graphic>
                            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@Images/Recuperar.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </children>
            </VBox>
        </HBox>
    </center>
</BorderPane>
